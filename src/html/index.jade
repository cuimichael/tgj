block headLinks
  link(rel="stylesheet", type="text/css", href="css/index.css")

block body
  header.navbar.navbar-static-top
    .container
      .navbar-header 
        a.navbar-brand 题管家

      nav.collapse.navbar-collapse
        ul.nav.navbar-nav
          li 
            a one
          li 
            a two
          li 
            a three

        ul.nav.navbar-nav.navbar-right
          li
            a four
          li
            a five

  section#landing
    .container
      h1 Welcome!
      

  section#signup
    .container
      .row
        .col-md-4.col-md-offset-4.col-sm-6.col-sm-offset-3
          .signup-wrap.card
            ul.nav.nav-pills.nav-justified(role="tablist")
              li.toggle-login(role="presentation" class="active")
                a 登录
              li.toggle-signup(role="presentation")
                a 注册
            .signup-form-wrap
              form#login-form
                .form-group
                  input.form-control(type="email" placeholder="邮箱" required)
                .form-group
                  input.form-control(type="password" placeholder="密码" required)
                button(type="submit" class="btn btn-info btn-block") 登录
                .form-group
                  .checkbox
                    label
                      input(type="checkbox") 
                      |下次自动登录
              form#signup-form(style='display:none;')
                .form-group
                  input.form-control(type="email" placeholder="邮箱" required)
                .form-group
                  input.form-control(type="password" placeholder="密码" required)
                button(type="submit" class="btn btn-info btn-block") 注册


block bodyScripts
  script.
    $('li.toggle-login').on('click', function(){
      $('#login-form').show();
      $('#signup-form').hide();
      $(this).addClass('active');
      $('li.toggle-signup').removeClass('active');
    });
    $('li.toggle-signup').on('click',function(){
      $('#signup-form').show();
      $('#login-form').hide();
      $(this).addClass('active');
      $('li.toggle-login').removeClass('active');
    });